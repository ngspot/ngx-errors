{
  "name": "@ngspot/ngx-errors-package",
  "version": "0.0.0",
  "description": "Handle error messages in Angular forms with ease",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "contributors:add": "all-contributors add",
    "hooks:pre-commit": "node hooks/pre-commit.js",
    "commit": "git-cz",
    "release:first": "npm run release -- --first-release",
    "build:lib": "ng build ngx-errors --configuration production",
    "test:lib": "ng test ngx-errors",
    "test:lib:headless": "cross-env CI=true npm run test:lib",
    "test:lib:coverage": "npm run test:lib -- --code-coverage",
    "postbuild:lib": "copyfiles README.md logo.png dist/ngx-errors",
    "release": "cd projects/ngx-errors && standard-version --infile ../../CHANGELOG.md",
    "commitlint": "commitlint",
    "prepare": "husky install"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.1.0",
    "@angular/cdk": "^13.1.1",
    "@angular/common": "~13.1.0",
    "@angular/compiler": "~13.1.0",
    "@angular/core": "~13.1.0",
    "@angular/forms": "~13.1.0",
    "@angular/material": "^13.1.1",
    "@angular/platform-browser": "~13.1.0",
    "@angular/platform-browser-dynamic": "~13.1.0",
    "@angular/router": "~13.1.0",
    "rxjs": "~6.5.4",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.0.4",
    "@angular/cli": "~13.0.4",
    "@angular/compiler-cli": "~13.1.0",
    "@angular/language-service": "~13.1.0",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-angular": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@ngneat/spectator": "^9.0.0",
    "@types/jasmine": "~3.6.0",
    "@types/jasmine-given": "^2.6.4",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "all-contributors-cli": "^6.20.0",
    "codelyzer": "^6.0.0",
    "copyfiles": "^2.2.0",
    "cross-env": "^5.2.0",
    "git-cz": "^4.8.0",
    "husky": "^7.0.0",
    "jasmine-core": "~3.6.0",
    "jasmine-given": "^2.6.4",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.3.9",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-given": "^0.1.1",
    "karma-jasmine-html-reporter": "~1.5.0",
    "lint-staged": "^12.1.2",
    "ng-packagr": "^13.1.1",
    "prettier": "^2.5.1",
    "standard-version": "^9.3.2",
    "ts-node": "~8.8.2",
    "tslint": "~6.1.0",
    "typescript": "~4.4.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,ts,html,component.html}": [
      "prettier --write"
    ]
  },
  "license": "MIT"
}
